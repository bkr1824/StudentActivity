
{% extends 'a_base.html' %}
{% load static %}

{% block content %}
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<center>
	<font size="" color="#ff0000"><strong>{{msg}}</strong></font>
	<b>
	

<h2>Add Cadidates </h2><br>
<form method="post" action="/regvoting/">
	{% csrf_token %} 
				<table id="tab">

                    <tr><td><input class="form-control"  type="text" name="name" placeholder="Cadidate Name" required="required"   size="50"  ></input>
                    <tr><td>Upload Image<input class="form-control"  type="file" name="image" required="required"   size="50"  ></input>
					


					<tr><td><input type="submit" class="form-control" value="Add"  size="50"  >
                
</table>
</form><br>

<br>

<hr><br>
<h3>View Results</h3><br>
<table width="100%" border>
<tr><th>#<th>Candidate Name<th > <th>Votes<th>
{% for d1 in data %}

<TR><TD>{{forloop.counter}}<TD>{{d1.name}}<TD><img  src="{{baseUrl}}/{{d1.image}}" alt="" width="200" height="150">
<TD>{{d1.votes}}
<td width="50%">
<div class="w3-light-grey">
  <div class="w3-grey" style="height:24px;width:{{d1.votesp}}%"></div>
</div>

{% endfor %}

</table>


{% endblock %}